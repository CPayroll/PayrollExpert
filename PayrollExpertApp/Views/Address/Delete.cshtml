@model PayrollExpertApp.Data.Address

<div class="col-md-10 panel-primary">
    <div class="content-box-header panel-heading">
        <div class="panel-title">Address - Edit</div>
    </div>

    <div class="panel-body">
        <div class="tab-content">
            <div class="tab-pane active col-lg-12" id="tab1">
                <h3>Are you sure you want to delete this?</h3>
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Type)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.AddressLine1)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.AddressLine1)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.AddressLine2)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.AddressLine2)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.AddressLine3)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.AddressLine3)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Province)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Province)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Country)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Country)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PostalCode)
                        </dd>
                        @if (Model.CompanyId != null)
                        {
                        <dt>
                            @Html.DisplayNameFor(model => model.Company)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Company.Name)
                        </dd>
                        }
                        @if (Model.PersonId != null)
                        {
                         <dt>
                            @Html.DisplayNameFor(model => model.Person)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Person.FirstName) @Html.DisplayFor(model => model.Person.LastName)
                        </dd>
                        }
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        @if (Model.CompanyId != null)
                        {
                            <input type="button" value="Back" class="btn btn-default" onclick="location.href='@Url.Action("Edit", "Company", new { id = Model.CompanyId})'" />
                        }
                        else
                        {
                            <input type="button" value="Back" class="btn btn-default" onclick="location.href='@Url.Action("Edit", "People", new { id = Model.PersonId})'" />
                        }
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </form>
                </div>
            </div>
        </div>
    </div>
